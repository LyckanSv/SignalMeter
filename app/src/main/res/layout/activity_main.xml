<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udb.moviles.signalmeter.MainActivity">



    <Button
        android:id="@+id/button"
        android:layout_width="152dp"
        android:layout_height="51dp"
        android:text="Medir"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/routerImg"
        app:layout_constraintVertical_bias="0.675"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/primary_light"
        android:onClick="activar"
        app:layout_constraintBottom_toTopOf="@+id/button3" />

    <ImageView
        android:id="@+id/routerImg"
        android:layout_width="253dp"
        android:layout_height="288dp"
        app:srcCompat="@drawable/modem"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="39dp"
        app:layout_constraintHorizontal_bias="0.504"

        />

    <Button
        android:id="@+id/button3"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:text="Capturar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="37dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/primary_light"
        android:visibility="invisible"
        android:enabled="false"
        android:onClick="nextPosition"
        />

    <TextView
        android:id="@+id/posicionesTex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciemos en 0 grados"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="invisible"
        />


</android.support.constraint.ConstraintLayout>
